<?xml version="1.0" encoding="utf-8"?>
<ScrollView
      xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:visibility="visible">

    <AbsoluteLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/images"
        android:orientation="vertical" >

       

        <Button
            android:id="@+id/button_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="4dp"
            android:layout_y="417dp"
            android:onClick="create"
            android:text="@string/button_create" />

        <EditText
            android:id="@+id/edit_topic"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:layout_x="12dp"
            android:layout_y="60dp"
            android:ems="10"
            android:hint="@string/Topic" />

        <EditText
            android:id="@+id/edit_message"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:layout_x="12dp"
            android:layout_y="128dp"
            android:ems="10"
            android:hint="@string/Description" />

        <CheckBox
            android:id="@+id/box_pick_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="16dp"
            android:layout_y="212dp"
            android:text="@string/pick_time" />

        <Button
            android:id="@+id/button_random"
            android:layout_width="300dp"
            android:layout_height="46dp"
            android:layout_x="8dp"
            android:layout_y="9dp"
            android:onClick="random"
            android:text="@string/button_random" />

        <TextView
            android:id="@+id/show_date1"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_x="167dp"
            android:layout_y="220dp"
            android:textColor="#20B2AA"
            android:textSize="14dp"
            android:textStyle="bold"
            android:typeface="serif" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="16dp"
            android:layout_y="260dp"
            android:text="Repeat Daily" />
        <CheckBox
            android:id="@+id/checkBoxLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="16dp"
            android:layout_y="308dp"
            android:text="Add Location" />
        
         <EditText
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/edit_location"
             android:layout_width="218dp"
             android:layout_height="55dp"
             android:layout_x="18dp"
             android:layout_y="340dp"
             android:visibility="invisible" />
          <TextView
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/show_choosen_location"
             android:layout_width="189dp"
             android:layout_height="wrap_content"
             android:layout_x="18dp"
             android:layout_y="340dp"
              />

         <Button
             android:id="@+id/okLocation"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_x="238dp"
             android:layout_y="340dp"
             android:text="OK"
             android:visibility="invisible" />
         <Button
             android:id="@+id/editLocation"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_x="228dp"
             android:layout_y="340dp"
             android:text="Change"
             android:visibility="invisible" />
      
    </AbsoluteLayout>

</ScrollView>