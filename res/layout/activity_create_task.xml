<?xml version="1.0" encoding="utf-8"?>
<ScrollView
      xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:visibility="visible">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
	android:orientation="vertical" 
	android:background="@drawable/paper7">

   	    <TextView
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/topic_task2"
             android:text="Topic:"
             android:layout_width="189dp"
             android:layout_height="wrap_content"
			 android:paddingTop="20dp"
			 android:paddingLeft="10dp"
             android:textStyle="bold"
              />
        <EditText
            android:maxLength="25"
            android:id="@+id/edit_topic"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/Topic" />
 		 <TextView
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/des_task_2"
             android:text="Description:"
             android:layout_width="189dp"
             android:layout_height="wrap_content"
             android:textStyle="bold"
             android:paddingLeft="10dp"
              />
        <EditText
            android:id="@+id/edit_message"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Description" />
 <AbsoluteLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <CheckBox
            android:id="@+id/box_pick_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="16dp"
            android:layout_y="92dp"
            android:text="@string/pick_time" />

        

        <TextView
            android:id="@+id/show_date1"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_x="167dp"
            android:layout_y="100dp"
            android:textColor="#20B2AA"
            android:textSize="14dp"
            android:textStyle="bold"  />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="16dp"
            android:layout_y="140dp"
            android:text="Repeat Daily" />
        <CheckBox
            android:id="@+id/checkBoxLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="16dp"
            android:layout_y="188dp"
            android:text="Add Location" />
        
         <EditText
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/edit_location"
             android:layout_width="218dp"
             android:layout_height="55dp"
             android:layout_x="18dp"
             android:layout_y="220dp"
             android:visibility="invisible" />
          <TextView
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/show_choosen_location"
             android:layout_width="189dp"
             android:layout_height="wrap_content"
             android:layout_x="18dp"
             android:layout_y="220dp"
              />

         <Button
             android:id="@+id/okLocation"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_x="238dp"
             android:layout_y="220dp"
             android:text="OK"
             android:visibility="invisible" />
         <Button
             android:id="@+id/editLocation"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_x="228dp"
             android:layout_y="220dp"
             android:text="Change"
             android:visibility="invisible" />
      
    </AbsoluteLayout>
    <Button
            android:id="@+id/button_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="create"
            android:background="@drawable/button_save"
            android:text="@string/button_create" />
</LinearLayout>
</ScrollView>