<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todos2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TaskNOID"
            android:label="@string/title_activity_task_noid" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateTaskActivity"
            android:label="@string/title_activity_create_task" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".ReminderBroadCastReciver">	
		 <intent-filter>                
				 <action android:name="com.r_.reminder_broadcast"/>
		</intent-filter>	
</receiver>
    </application>

</manifest>